<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vectorcar"
    tools:context=".loginsingup">

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="340dp"
        android:elevation="25dp"
        app:cardBackgroundColor="#EFEDED"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/accountimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_account_circle_24">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:text="If you are a new user, an account will be created for you.">
        </TextView>
        <EditText
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:autofillHints="username"
            android:hint="Username"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/baseline_account_box_24"
            android:textColorHint="#025A81"></EditText>
        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:autofillHints="emailAddress"
            android:hint="Gmail"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/baseline_email_24"
            android:textColorHint="#025A81"></EditText>
        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:autofillHints="phone"
            android:hint="Phone Number"
            android:textColor="@color/black"
            android:inputType="phone"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="190dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/baseline_phone_24"
            android:textColorHint="#025A81"></EditText>
        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:autofillHints="password"
            android:hint="Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/baseline_lock_24"
            android:textColorHint="#025A81"></EditText>
        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="6dp"
            android:layout_marginTop="210dp"
            android:layout_marginStart="100dp"
            android:onClick="forgotpassword"
            android:layout_marginEnd="20dp"></TextView>
        <Button
            android:id="@+id/loginbtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"
            android:onClick="login"
            android:textColor="@color/white">
        </Button>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>